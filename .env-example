# ===========================================
# CONFIGURACIÓN DE ENTORNO - FRONTEND
# ===========================================

# Configuración base de Nuxt
NUXT_PORT=3000
NUXT_HOST=0.0.0.0

# URL de la API backend
NUXT_PUBLIC_API_BASE_URL=http://localhost:5000
NUXT_PUBLIC_API_TIMEOUT=10000

# Configuración de autenticación
NUXT_PUBLIC_AUTH_COOKIE_NAME=auth-token
NUXT_PUBLIC_AUTH_STORAGE_KEY=auth
NUXT_SECRET_KEY=tu-clave-secreta-para-nuxt

# URLs públicas y privadas
NUXT_PUBLIC_SITE_URL=http://localhost:3000
NUXT_PUBLIC_APP_NAME=Viesglo
NUXT_PUBLIC_APP_DESCRIPTION=Sistema de gestión inteligente

# Configuración de MQTT para el cliente
NUXT_PUBLIC_MQTT_WS_URL=ws://localhost:8083/mqtt
NUXT_PUBLIC_MQTT_USERNAME=admin
NUXT_PUBLIC_MQTT_PASSWORD=public

# Google Services (opcional)
NUXT_PUBLIC_GOOGLE_MAPS_API_KEY=tu-clave-google-maps
NUXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Configuración de mapas
NUXT_PUBLIC_DEFAULT_LAT=-34.397
NUXT_PUBLIC_DEFAULT_LNG=150.644
NUXT_PUBLIC_MAP_ZOOM=13

# Configuración de WebSockets
NUXT_PUBLIC_WS_URL=ws://localhost:5000
NUXT_PUBLIC_WS_RECONNECT_INTERVAL=5000

# Configuración de archivos/uploads
NUXT_PUBLIC_MAX_FILE_SIZE=10485760
NUXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Configuración de notificaciones
NUXT_PUBLIC_NOTIFICATION_TIMEOUT=5000
NUXT_PUBLIC_TOAST_POSITION=top-right

# Configuración de desarrollo
NUXT_DEVTOOLS=true
NUXT_SSR=true

# Configuración de cookies
NUXT_PUBLIC_COOKIE_SECURE=false
NUXT_PUBLIC_COOKIE_SAME_SITE=lax
NUXT_PUBLIC_COOKIE_MAX_AGE=2592000

# Configuración de cache
NUXT_PUBLIC_CACHE_TTL=300000

# URLs de servicios externos
NUXT_PUBLIC_WEATHER_API_KEY=tu-clave-weather-api
NUXT_PUBLIC_PAYMENT_PUBLIC_KEY=tu-clave-publica-pagos

# Configuración de redes sociales
NUXT_PUBLIC_FACEBOOK_APP_ID=tu-facebook-app-id
NUXT_PUBLIC_TWITTER_HANDLE=@tu-twitter

# Configuración de PWA
NUXT_PUBLIC_PWA_NAME=Viesglo
NUXT_PUBLIC_PWA_SHORT_NAME=Viesglo
NUXT_PUBLIC_PWA_DESCRIPTION=Sistema de gestión inteligente

# Variables de entorno específicas de desarrollo
NUXT_PUBLIC_DEBUG_MODE=true
NUXT_PUBLIC_MOCK_DATA=false 